{
    "branches": [
        "master",
        "main",
        "+([0-9])?(.{+([0-9]),x}).x"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "refactoring",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "New Feature(s) üöÄ"
                        },
                        {
                            "type": "fix",
                            "section": "Bug Fix(es) üêõÔ∏è"
                        },
                        {
                            "type": "docs",
                            "section": "Documentation Changes üìù"
                        },
                        {
                            "type": "refactor",
                            "section": "Code Refactor üíÖ"
                        },
                        {
                            "type": "test",
                            "section": "Tests üì°Ô∏è"
                        },
                        {
                            "type": "perf",
                            "section": "Performance Improvement(s) üöÑÔ∏è"
                        },
                        {
                            "type": "build",
                            "section": "Build system üõ†Ô∏è"
                        },
                        {
                            "type": "refactoring",
                            "section": "Refactoring \uD83D\uDEE0"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "chmod +x ./release && ./release ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "**/*.{java,xml}",
                    "app/build.gradle",
                    "CHANGELOG.md",
                    "README.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    { "path": "app/build/outputs/bundle/release/*.aab", "label": "AAB distribution" },
                    { "path": "app/build/outputs/apk/release/*.apk", "label": "APK distribution" }
                ]
            }
        ]
    ]
}
